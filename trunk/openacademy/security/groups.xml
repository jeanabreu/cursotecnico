<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data noupdate="1">
		<record id="application_root" model="ir.module.category">
			<field name="name">OpenAcademy</field>
		</record>
		<record id="group_user" model="res.groups">
			<field name="category_id" ref="openacademy.application_root"/>
			<field name="name">OpenAcademy / User</field>
		</record>
		<record id="group_manager" model="res.groups">
			<field name="category_id" ref="openacademy.application_root"/>
			<field name="name">OpenAcademy / Manager</field>
			<field name='implied_ids' eval="[(4,[ref('opencademy.group_user'))]"/>
		</record>

		<record id="only_responsible_can_modify" model="ir.rule">
			<field name="name">Only Responsible can modify Course</field>
			<field name="model_id" ref="model_openacademy_course"/>
			<field name="groups" eval="[(4, ref('openacademy.group_manager'))]"/>
			<field name="perm_read" eval="0"/>
			<field name="perm_write" eval="1"/><!--permite escritura-->
			<field name="perm_create" eval="0"/>
			<field name="perm_unlink" eval="1"/><!--permite eliminacion-->
			<field name="domain_force">
				['|', ('responsible_id','=',False), ('responsible_id','=',user.id)]
			</field>
		</record>
	</data>
</openerp>