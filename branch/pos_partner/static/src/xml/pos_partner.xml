<?xml version="1.0" encoding="UTF-8"?>
<templates>

    <t t-extend="PaymentScreenWidget">
    	<t t-jquery="br" t-operation="before">
    		<div class="infoline" >
    			<span class='left-block'>
    				Reference / VAT:
    			</span>
    			<span class='oe_pos_partner-payment-vat-number right-block' id="payment-vat-number">
    				<input type="text" class="oe_pos_partner-payment-vat-number-value"/>
    				<a href='javascript:void(0)' class='oe_pos_partner-search-vat-number'><img src="/point_of_sale/static/src/img/search.png" /></a>
    			</span>
    		</div>
    		<div class="oe_pos_partner-payment-vat-name infoline" style="visibility:hidden;">
    			<span class='left-block'>
    				Name:
    			</span>
    			<span class='right-block' id="payment-vat-name">
    				<input type="text"/>
    			</span>
    		</div>
       	</t>
	</t>

</templates>
