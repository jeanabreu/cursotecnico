<?xml version="1.0" encoding="UTF-8"?>

<openerp>
	<data>
		
		<record model="ir.ui.view" id="view_stock_serial_number_tree">
            <field name="name">Stock Serial Numbers</field>
            <field name="model">stock.serial</field>
            <field name="arch" type="xml">
                <tree string="Stock Serial Numbers">
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="last_location_id"/>
                    <field name="prodlot_id" groups="stock.group_production_lot"/>
                    <field name="tracking_id" groups="stock.group_tracking_lot"/>
                    <field name="uom_id"/>
                    <field name="warranty_end"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="view_stock_serial_number_form">
            <field name="name">Stock Serial Number</field>
            <field name="model">stock.serial</field>
            <field name="arch" type="xml">
                <form string="Stock Serial Number">
                    <field name="product_id" on_change="on_change_product_id(product_id)"/>
                    <field name="name"/>
                    <field name="prodlot_id" context="{'product_id':product_id}"
                    	groups="stock.group_production_lot" domain="[('product_id','=?',product_id)]"/>
                    <field name="tracking_id" groups="stock.group_tracking_lot"/>
                    <field name="warranty_start" on_change="on_change_warranty(warranty_start,warranty)"/>
                    <field name="warranty" on_change="on_change_warranty(warranty_start,warranty)"/>
                    <field name="warranty_end"/>
                    <field name="last_location_id"/>
                    <separator string="Moves" colspan="4"/>
                    <field name="move_ids" colspan="4" nolabel="1" context="{'product_id':product_id,'prodlot_id':prodlot_id,'tracking_id':tracking_id}" domain="[('product_id','=?',product_id)]">
                        <tree string="Stock Moves">
                            <field name="picking_id"/>
                            <field name="name"/>
                            <field name="product_qty"/>
                            <field name="product_uom"/>
                            <field name="date"/>
                            <field name="date_expected"/>
                            <field name="location_id"/>
                            <field name="location_dest_id"/>
                            <field name="prodlot_id" groups="stock.group_production_lot"/>
                            <field name="tracking_id" groups="stock.group_tracking_lot"/>
                            <field name="state"/>
                        </tree>
                    </field>
                </form>
            </field>
        </record>
		
		<record id="view_stock_serial_filter" model="ir.ui.view">
            <field name="name">stock.serial.filter</field>
            <field name="model">stock.serial</field>
            <field name="arch" type="xml">
                <search string="Search Serial Numbers">
                    <field name="name" string="Serial Number" filter_domain="[('name','ilike',self)]"/>
                    <field name="product_id"/>
                    <field name="last_location_id"/>
                    <field name="prodlot_id" groups="stock.group_production_lot"/>
                    <field name="tracking_id" groups="stock.group_tracking_lot"/>
                    <group expand="0" string="Group By...">
                    	<filter string="Product" icon="terp-folder-orange" domain="[]" context="{'group_by':'product_id'}"/>
                        <filter string="Last Location" icon="terp-partner" domain="[]" context="{'group_by':'last_location_id'}"/>
                        <filter string="Production Lot" icon="terp-stock_effects-object-colorize" domain="[]"
                        	groups="stock.group_production_lot" context="{'group_by':'prodlot_id'}"/>
                        <filter string="Tracking Lot" icon="terp-stock_effects-object-colorize" domain="[]"  
                        	groups="stock.group_tracking_lot" context="{'group_by':'tracking_id'}"/>
                        <filter string="Warranty Start" icon="terp-go-month" domain="[]" context="{'group_by':'warranty_start'}"/>
                        <filter string="Warranty End" icon="terp-go-month" domain="[]" context="{'group_by':'warranty_end'}"/>
                    </group>
               </search>
            </field>
        </record>
		
        <record id="action_stock_serial_number_tree" model="ir.actions.act_window">
            <field name="name">Serial Numbers</field>
            <field name="res_model">stock.serial</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_stock_serial_filter"/>
            <field name="help">Traceability of serial numbers, a product lot or traking lot could have some serial numbers referer to a unique article.</field>
        </record>
        <menuitem action="action_stock_serial_number_tree" id="menu_stock_serial_number_tree" 
        	parent="stock.menu_traceability" sequence="100"/>
		
	</data>
</openerp>
